# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ecommerce?schema=public"

# Application
APP_URL="http://localhost:3000"
CORS_ORIGIN="http://localhost:3001"
PORT=3000

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-change-this"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"
STRIPE_PUBLISHABLE_KEY="pk_test_your_publishable_key"

# Email Provider (choose one: resend, brevo, nodemailer)
EMAIL_PROVIDER="nodemailer"
EMAIL_FROM="noreply@yourstore.com"
EMAIL_PROVIDER_KEY="" # API key for Resend or Brevo
# Nodemailer SMTP settings (if using nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Cloudinary (Image Upload)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# S3-Compatible Storage (optional)
STORAGE_BUCKET="ecommerce-products"
STORAGE_ENDPOINT="https://s3.amazonaws.com"
STORAGE_ACCESS_KEY="your-access-key"
STORAGE_SECRET_KEY="your-secret-key"
STORAGE_REGION="us-east-1"

# Redis (for BullMQ)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
